!(load "list.lurk")

!(assert-eq (first nil) nil)
!(assert-eq (first 1) nil)
!(assert-eq (first '(1)) 1)

!(assert-eq (rest nil) nil)
!(assert-eq (rest 1) nil)
!(assert-eq (rest '(1)) nil)
!(assert-eq (rest '(1 . 2)) 2)
!(assert-eq (rest '(1 2 3)) '(2 3))

!(assert-eq (last nil) nil)
!(assert-eq (last 1) 1)
!(assert-eq (last '(1 2 3)) nil)
!(assert-eq (last '(1 2 . 3)) 3)

!(assert-eq (is-proper '(1 2 . 3)) nil)
!(assert-eq (is-proper '(1 2 3)) 't)

!(assert-eq (map (lambda (x) x) '(1 2 3)) '(1 2 3))
!(assert-eq (map (lambda (x) (+ 1 x)) '(1 2 3)) '(2 3 4))
!(assert-eq (map (lambda (x) x) nil) nil)

